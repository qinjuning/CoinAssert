<?xml version="1.0" encoding="UTF-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/blue" />
            <stroke android:width="0.0dip" android:color="@color/screen_bg_color" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/screen_bg_color"/>
            <stroke android:width="0.0dip" android:color="@color/screen_bg_color" />
        </shape>
    </item>
</selector>