<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/slidingmenu_selector"
    android:minHeight="?android:attr/listPreferredItemHeight" >

    <ImageView
        android:id="@+id/image_coin_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="2dip"
        android:scaleType="center" />

    <TextView
        android:id="@+id/tv_coin_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/fl_container"
        android:layout_toRightOf="@+id/image_coin_icon"
        android:gravity="left"
        android:minWidth="50dip"
        android:text="比特币"
        android:textColor="@color/sliding_menu_txt_selectbg"
        android:textSize="18sp" >
    </TextView>

    <TextView
        android:id="@+id/tv_zengzhi_used_count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_coin_name"
        android:layout_alignRight="@id/tv_coin_name"
        android:layout_below="@id/tv_coin_name"
        android:layout_marginTop="6dip"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:text="130"
        android:textColor="#ff666666"
        android:textSize="14sp"
        android:visibility="gone" >
    </TextView>

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dip" >

        <TextView
            android:id="@+id/btn_zengzhi_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_submit"
            android:gravity="center"
            android:paddingBottom="6dip"
            android:paddingLeft="15dip"
            android:paddingRight="10dip"
            android:paddingTop="6dip"
            android:text="启动"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" >
        </TextView>

        <ImageView
            android:id="@+id/image_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:scaleType="center"
            android:src="@drawable/list_right_arrow" >
        </ImageView>
    </FrameLayout>

    <View
        android:id="@+id/divider_row"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color"
        android:visibility="gone" >
    </View>

</RelativeLayout>